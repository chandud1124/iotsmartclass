
# Database Configuration
MONGODB_URI=mongodb://localhost:27017/classroom_automation
# Alternative: Use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/classroom_automation

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys for External Services
CALENDAR_API_KEY=your_google_calendar_api_key
CALENDAR_ID=your_calendar_id_for_holidays

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=3002

# ESP32 Device Configuration
ESP32_DEFAULT_TIMEOUT=5000
ESP32_MAX_RETRIES=3

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin User (Created on first run)
ADMIN_EMAIL=admin@college.edu
ADMIN_PASSWORD=admin123456
ADMIN_NAME=System Administrator
